<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://java.sun.com/xml/ns/javaee"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:s="urn:java:ee"
       xmlns:vn="urn:java:com.smspl.mc4.monitoring.virtualnumber:com.smspl.mc4.monitoring.virtualnumber.commands:com.smspl.mc4.monitoring.virtualnumber.config"
       xmlns:mn="urn:java:com.smspl.mc4.monitoring"
       xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://docs.jboss.org/cdi/beans_1_0.xsd"
        >

    <mn:HeartbeatEmitter>
        <s:modifies/>
        <mn:initialDelay>3</mn:initialDelay>
        <mn:periodInSeconds>5</mn:periodInSeconds>
    </mn:HeartbeatEmitter>

    <vn:ExpireNewChecksCommand>
        <s:modifies/>
        <vn:timeOutInSeconds>120</vn:timeOutInSeconds>
    </vn:ExpireNewChecksCommand>

    <vn:AddNewChecksCommand>
        <s:modifies/>
        <vn:periodInSeconds>60</vn:periodInSeconds>
    </vn:AddNewChecksCommand>

    <vn:VirtualNumberConfigManager>
        <s:modifies/>
        <vn:checkConfigs>
            <s:Any/>
            <s:Inject/>
        </vn:checkConfigs>
    </vn:VirtualNumberConfigManager>

    <vn:VirtualNumberConfig>
        <s:modifies/>
        <vn:username>a</vn:username>
        <vn:password>a</vn:password>
        <vn:recipient>a</vn:recipient>
        <vn:sender>a</vn:sender>
    </vn:VirtualNumberConfig>

</beans>